<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Theme -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <item name="colorPrimary">@color/primary</item>
    <item name="colorSecondary">@color/secondary</item>

    <item name="colorPrimaryVariant">@color/primaryDark</item>
    <item name="colorSecondaryVariant">@color/secondaryDark</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    <item name="colorOnSecondary">@color/colorOnSecondary</item>
    <item name="colorOnError">@color/colorOnPrimary</item>

    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/colorOnSurface</item>
    <item name="colorOnSurfaceEmphasisMedium">@color/colorOnSurfaceMedium</item>
    <item name="colorOnSurfaceDisabled">@color/colorOnSurfaceDisabled</item>

    <item name="android:colorBackground">@color/background</item>
    <item name="colorOnBackground">@color/colorOnSurface</item>
    <item name="scrimBackground">@color/foregroundLight</item>

    <item name="android:statusBarColor">@color/primary</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="colorError">@color/error</item>

    <item name="fontFamily">@font/poppins_medium</item>

    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Envelop.LargeComponent</item>

  </style>

  <style name="AppTheme.Color">
    <item name="android:colorBackground">@color/primary</item>
  </style>

  <!-- Shapes -->

  <style name="ShapeAppearance.Envelop.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopLeft">4dp</item>
    <item name="cornerSizeBottomLeft">4dp</item>
    <item name="cornerSizeBottomRight">4dp</item>
    <item name="cornerSizeTopRight">0dp</item>
  </style>

  <!-- Main -->

  <style name="CoordinatorLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:textColor">@color/colorOnSurface</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="iconTint">@color/menuIconTint</item>
    <item name="iconPadding">24dp</item>
  </style>

</resources>
